{
  "name": "minecraft-launcher",
  "version": "1.0.0",
  "description": "Universal Minecraft Launcher with C++ Core",
  "main": "src/ui/main.js",
  "scripts": {
    "start": "electron .",
    "build:core": "cmake -B build -S . && cmake --build build --config Release",
    "install": "npm run build:core",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.minecraft.universallauncher",
    "productName": "Minecraft Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "!src/core/**/*.cpp",
      "!src/core/**/*.h",
      "!**/*.map"
    ],
    "extraResources": [
      "build/Release/minecraft_core.node"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/ui/assets/icon.ico"
    }
  },
  "dependencies": {
    "electron": "^25.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "node-gyp": "^9.0.0"
  },
  "gypfile": true
}
