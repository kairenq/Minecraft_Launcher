{
  "name": "aureate-launcher",
  "version": "1.0.0",
  "description": "Minecraft Launcher with C++ backend",
  "main": "src/ui/main.js",
  "scripts": {
    "start": "cd src/ui && electron .",
    "dev": "cd src/ui && electron . --enable-logging",
    "build": "electron-builder",
    "build:windows": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build-core": "cd src/core && mkdir -p build && cd build && cmake .. && cmake --build . --config Release",
    "build-addon": "cd src/core && node-gyp configure build",
    "install-all": "npm install && cd src/ui && npm install && cd ../bridge && npm install",
    "postinstall": "npm run build-addon",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "author": "Aureate Launcher Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "node-gyp": "^9.0.0",
    "cmake-js": "^7.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "node-addon-api": "^6.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.aureate.launcher",
    "productName": "Aureate Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/*.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/ui/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/ui/assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/ui/assets/icon.icns"
    }
  },
  "optionalDependencies": {
    "electron-builder-squirrel-windows": "^24.0.0"
  }
}